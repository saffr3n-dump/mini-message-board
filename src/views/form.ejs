<h1><%= title %></h1>

<form action="/new" method="POST">
  <label for="name">
    Name:
    <input type="text" name="name" id="name" required>
  </label>
  <label for="message">
    Message:
    <textarea name="message" id="message" required></textarea>
  </label>
  <button type="submit">Send</button>
  <a href="/"><button type="button">Back</button>
</form>
